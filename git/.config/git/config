  email = maxphaley@users.noreply.github.com
[core]
  pager = less -FRi
  autocrlf = false
  eol = lf
  fscache = true
[push]
  default = simple
[pull]
  ff = only
[rebase]
  autoSquash = true
  autoStash = true
[init]
  defaultBranch = main
[branch]
  sort = -committerdate
[commit]
  verbose = true
[log]
  abbrevCommit = true
  follow = true
[diff]
  colorMoved = true
  mnemonicPrefix = true
  algorithm = histogram
  submodule = log
[fetch]
  prune = true
  writeCommitGraph = true
[tag]
  sort = v:refname
[merge]
  tool = fugitive
[mergetool "fugitive"]
  cmd = nvim -f -c "Gvdiffsplit!" "$MERGED"
[alias]
  br = branch
  co = checkout
  ci = commit
  st = status
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
